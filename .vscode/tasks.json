{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Hugo Server",
      "type": "shell",
      "command": "export HUGO_ENV_GIT_COMMIT_HASH=$(git rev-parse --verify HEAD) && hugo server --bind 0.0.0.0 --disableFastRender --noHTTPCache",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Web Server is available at",
          "endsPattern": "Press Ctrl+C to stop"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Typos: Check",
      "type": "shell",
      "command": "typos",
      "problemMatcher": {
        "owner": "typos",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ]
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Typos: Watch",
      "type": "shell",
      "command": "typos --watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typos",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Watching",
          "endsPattern": "^$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
